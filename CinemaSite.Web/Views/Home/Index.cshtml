@using CinemaSite.Domain.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Кіносайт</title>
    <link rel="stylesheet" href="~/css/movie-style.css">
</head>
<body style="background-image:url('/files/img/background-photo.jpg'); background-attachment:fixed; background-position:center; background-repeat:no-repeat; background-size:cover;">
    <div class="base-container-test">
        <header>
            <div class="header-content">
                <h1>Ласкаво просимо на CrazyViewing</h1>
                <p>Найкращі фільми, серіали, мультфільми та аніме чекають на вас!</p>
            </div>
        </header>

        
        <div style="background-color:#363c49">
        <div class="content">
            <section class="category">
                <h2>Фільми</h2>
                <div class="carousel">
                    <button class="carousel-btn prev" onclick="scrollCarousel('movies', -1)">&#10094;</button>
                    <div class="carousel-container">
                        @foreach(MovieModel movie in Model)
                        {

                                <div class="carousel-item-test" onclick="watchMovie('@movie.Title','@movie.Price')">
                                    <img class="poster" src="~/files/posters/@movie.PosterPath" aly="@movie.Title" />
                                    <h3>@movie.Title</h3>
                                </div>
                        }
                    </div>
                    <button class="carousel-btn next" onclick="scrollCarousel('movies', 1)">&#10095;</button>
                </div>
            </section>

            <section class="category">
                <h2>Серіали</h2>
                <div class="carousel">
                    <button class="carousel-btn prev" onclick="scrollCarousel('series', -1)">&#10094;</button>
                    <div class="carousel-container" id="series">
                        <div class="carousel-item">
                            <img src="борд.jpg" alt="Серіал 1">
                            <h3>Пригоди Люсіль</h3>
                            <button class="watch-btn" onclick="watchMovie('Пригоди Люсіль')">Дивитися</button>
                        </div>
                    </div>
                    <button class="carousel-btn next" onclick="scrollCarousel('series', 1)">&#10095;</button>
                </div>
            </section>

            <section class="category">
                <h2>Мультфільми</h2>
                <div class="carousel">
                    <button class="carousel-btn prev" onclick="scrollCarousel('cartoons', -1)">&#10094;</button>
                    <div class="carousel-container" id="cartoons">
                        <div class="carousel-item">
                            <img src="cartoon1.jpg" alt="Мультфільм 1">
                            <h3>Мультфільм 1</h3>
                            <button class="watch-btn" onclick="watchMovie('Мультфільм 1')">Дивитися</button>
                        </div>
                    </div>
                    <button class="carousel-btn next" onclick="scrollCarousel('cartoons', 1)">&#10095;</button>
                </div>
            </section>

            <section class="category">
                <h2>Аніме</h2>
                <div class="carousel">
                    <button class="carousel-btn prev" onclick="scrollCarousel('anime', -1)">&#10094;</button>
                    <div class="carousel-container" id="anime">
                        <div class="carousel-item">
                            <img src="anime1.jpg" alt="Аніме 1">
                            <h3>Аніме 1</h3>
                            <button class="watch-btn" onclick="watchMovie('Аніме 1')">Дивитися</button>
                        </div>
                    </div>
                    <button class="carousel-btn next" onclick="scrollCarousel('anime', 1)">&#10095;</button>
                </div>
            </section>
        </div>

            <!-- Модальне вікно -->
            <div id="movieModal" class="modal">
                <div class="modal-content">
                    <span class="close-btn" onclick="closeModal()">&times;</span>

                    <!-- Перший розділ: Інформація про фільм -->
                    <div class="modal-section">
                        <img id="movieImage" src="" alt="Movie Image" class="movie-image">
                        <h2 id="movieTitle"></h2>
                        <p id="moviePrice"></p>
                    </div>

                    <!-- Кнопки для перемикання між контейнерами -->
                    <div class="view-selection">
                        <button onclick="showOnlineView()">Онлайн перегляд</button>
                        <button onclick="showCinemaView()">Перегляд у кіно</button>
                    </div>

                    <!-- Контейнери для двох варіантів перегляду -->
                    <div id="onlineView" class="view-container">
                        <h3>Онлайн перегляд</h3>
                        <p>Ціна за перегляд: <span id="onlinePrice"></span> грн</p>
                        <button onclick="confirmOnlineBooking()">Підтвердити онлайн перегляд</button>
                    </div>

                    <div id="cinemaView" class="view-container" style="display: none;">
                        <h3>Перегляд у кіно</h3>
                        <div id="cinemaSeats"></div>
                        <p>Загальна ціна: <span id="cinemaTotalPrice">0</span> грн</p>
                        <button onclick="confirmBooking()">Оформити замовлення в кіно</button>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script src="~/js/movie-index.js"></script>
</body>
</html>
